<div class="form">
	<%= form_for (@article) do |f| %>
	  <div class="form-title"> 
	  	<%= f.label "Title:" %>
	  	<%= f.text_field :title %>
	  </div>
	  <div class="form-content">
		  <%= f.label "Content: " %>
		  <%= f.text_area :content, size: "60x12" %>
	  	  <%= f.submit %>
	  </div>
	<% end %>
</div> 